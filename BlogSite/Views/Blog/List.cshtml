@model IEnumerable<BlogSite.Models.BlogModel>
@{
    ViewBag.Title = "Index";
}
    <h4 class="mt-3">Blog Listesi</h4>
    <hr />
@if (Model.Count() == 0)
{
    <div class="row ">
        <div class="col-md-8">
            <div id="section-left" class="float-left pr-5 mb-5 pt-5">

                <div class="alert alert-info">
                    <h4>Kayıt Bulunamadı!</h4>
                </div>

            </div>
        </div>
        <div class="col-md-4">
            <!--Kategori bölümü buraya gelecek daha dinamik halde değil-->
            <div id="section-right" class="float-left pr-5  pt-5">
                <div id="section-search" class="card mb-4 ">
                    <h2 class="card-header font-weight-bold lead">Arama</h2>
                    <form class="form-inline p-3">
                        <input class="form-control " type="search" placeholder="Search for.." aria-label="Search" style="width:65%;">
                        <button class="btn btn-dark ml-2 btn-md " type="submit">Search</button>
                    </form>
                </div>
                @{Html.RenderAction("KategoriListesi", "Category");}
                <div class="card mb-4 iletisim">
                    <p class="card-header font-weight-bold lead">İletişim</p>
                    <div>
                        <ul class="list-unstyled p-4 ml-5 mb-5">
                            <li class="float-left mr-3">
                                <a href="#"><i class="fab fa-linkedin fa-3x"></i></a>

                            </li>
                            <li class="float-left mr-3">

                                <a href="#"><i class="fab fa-github-square fa-3x"></i></a>

                            </li>
                            <li class="float-left mr-3 ">

                                <a href="#"><i class="fab fa-twitter-square fa-3x"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>

    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div id="section-left" class="float-left pr-5 mb-5 pt-5">

                @foreach (var blog in Model)
                {
                    <div class="card mb-4">
                        <img class="card-img-top " src="~/Img/img3.jpg" alt="Card image cap" style="width:100%;">
                        <div class="card-body">
                            <h5 class="card-title font-weight-bold">@blog.Baslik</h5>
                            <p class="card-text ">@blog.Aciklama</p>
                            @Html.ActionLink("Daha Fazla..", "Details", "Blog", new { id = @blog.Id }, new { @class = "btn btn-primary" })

                        </div>
                        <div class="card-footer text-muted">@blog.EklenmeTarihi</div>
                    </div>

                }

            </div>
        </div>
        <div class="col-md-4">
            <!--Kategori bölümü buraya gelecek daha dinamik halde değil-->
            <div id="section-right" class="float-left pr-5  pt-5">
                <div id="section-search" class="card mb-4 ">
                    <h2 class="card-header font-weight-bold lead">Arama</h2>
                    <form class="form-inline p-3">
                        <input class="form-control " type="search" placeholder="Search for.." aria-label="Search" style="width:65%;">
                        <button class="btn btn-dark ml-2 btn-md " type="submit">Search</button>
                    </form>
                </div>
                @{Html.RenderAction("KategoriListesi", "Category");}
                <div class="card mb-4 iletisim">
                    <p class="card-header font-weight-bold lead">İletişim</p>
                    <div>
                        <ul class="list-unstyled p-4 ml-5 mb-5">
                            <li class="float-left mr-3">
                                <a href="https://www.linkedin.com/in/asl%C4%B1han-d-5a987a146/"><i class="fab fa-linkedin fa-3x"></i></a>

                            </li>
                            <li class="float-left mr-3">

                                <a href="https://github.com/aslidasci"><i class="fab fa-github-square fa-3x"></i></a>

                            </li>
                            <li class="float-left mr-3 disabled">

                                <a href="#"><i class="fab fa-twitter-square fa-3x"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>

    </div>
}



@section Son
{
    <footer class=" text-light text-center py-3">
        <div class="container ">Copyright © Your Website 2019 </div>
    </footer>
}

