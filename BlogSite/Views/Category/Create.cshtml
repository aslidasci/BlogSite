@model BlogSite.Models.Category

@{
    ViewBag.Title = "Create";
}

<h2 class="mt-4">Kategori Ekle</h2>
<hr />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<form>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(model => model.KategoriAdi, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.KategoriAdi, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KategoriAdi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-dark" />
        </div>
    </div>
</form>
}

<div>
    @Html.ActionLink("Kategori Listesine Dön", "Index",null,new { @class="btn btn-primary" })
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
